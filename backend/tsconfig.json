{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "target": "ES6",
        "module": "CommonJS",
        "strict": true,
        "typeRoots": ["./src/types", "./node_modules/@types"],
        "esModuleInterop": true,
        "skipLibCheck": true,                     
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["node_modules"],
    "include": ["src/**/*", "src/types"]
}